<%= form_for @micropost do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.text_area :content,placeholder:"Please Enter Post Content", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Post",class:"btn btn-primary col-md-12" %>
  </div>

<% end %>
