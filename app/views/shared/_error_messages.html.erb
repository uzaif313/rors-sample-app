<% if @user.errors.any? %>

  <div class="error_explanation">
    <div class="alert alert-danger">
      The form Contains <%= pluralize(@user.errors.count,"error")%>
      <ul>
        <%= @user.errors.full_messages.each do |error|%>
        <li>
            <%= error %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
